<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Highlighted state (pressed, focused, or hovered) -->
    <item android:drawable="@color/highlightedColor" android:state_pressed="true" />
    <item android:drawable="@color/highlightedColor" android:state_focused="true" />
    <item android:drawable="@color/highlightedColor" android:state_hovered="true" />

    <!-- Default state -->
    <item android:drawable="@color/defaultColor" />
</selector>
